{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@ReactiveEntity": [
        "src/entity"
      ],
      "@ReactiveEntity/exceptions": [
        "src/exceptions"
      ],
      "@ReactiveEntity/decorators": [
        "src/decorators"
      ],
      "@ReactiveEntity/utils": [
        "src/utils"
      ],
      "@ReactiveEntity/i18n": [
        "src/i18n"
      ]      
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}